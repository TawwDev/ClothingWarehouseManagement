<Window x:Class="ASS_ClothingWarehouseManagement.view.SupplierManagement.UpdateSupplierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASS_ClothingWarehouseManagement.view.SupplierManagement"
        mc:Ignorable="d"
        Title="UpdateSupplierWindow" Height="400" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 1. Header Bar -->
            <Border Grid.Row="0" Background="#1F77B4" Padding="20,15,20,15">
                <TextBlock Text="UPDATE SUPPLIER" 
       Foreground="White" 
       FontSize="18" 
       FontWeight="Bold" 
       HorizontalAlignment="Center"/>
            </Border>

            <!-- 2. Main Form Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="40">
                    <!-- Form Fields Grid -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Row 1 -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,15,25">
                            <Label Content="Supplier Name" />
                            <TextBox x:Name="tbSupplierName" Padding="5"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,15,25">
                            <Label Content="Phone" />
                            <TextBox x:Name="tbPhone" Padding="5"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,15,25">
                            <Label Content="Email"/>
                            <TextBox x:Name="tbEmail" Padding="5"/>
                        </StackPanel>

                        <!-- Row 2 -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,15,25">
                            <Label Content="Address" />
                            <TextBox x:Name="tbAddress" Padding="5"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,15,25">
                            <Label Content="Status"/>
                            <ComboBox x:Name="cbStatus" SelectedIndex="0" Padding="5">
                                <ComboBoxItem Content="Active"/>
                                <ComboBoxItem Content="InActive"/>
                            </ComboBox>
                        </StackPanel>

                    </Grid>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10, 0, 0">
                        <Button x:Name="btnUpdateSupplier" Padding="5" Content="Update Supplier" Foreground="White" Background="#07a646" Click="btnUpdateSupplier_Click"/>
                        <Button x:Name="btnCancel" Padding="5" Content="Cancel" Foreground="White" Background="#041ad9" Margin="15,0,0,0" Click="btnCancel_Click"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
